<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <ListView
        android:id="@+id/list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etSearchString">

    </ListView>

    <TextView
        android:id="@+id/tvProfileBackground"
        android:scrollbars="vertical"
        android:layout_width="270dp"
        android:layout_height="320dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-10dp"
        android:layout_alignTop="@+id/bClose"
        android:background="@drawable/border_style2"
        android:textSize="12dp" />

    <Button
        android:id="@+id/bClose"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="110dp"
        android:layout_alignRight="@+id/tvProfile"
        android:background="@drawable/close" />

    <ImageView
        android:id="@+id/ivPreviewProfile"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_alignTop="@+id/bClose"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/tvProfileName"
        android:scrollbars="vertical"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/ivPreviewProfile"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textAllCaps="true"/>

    <TextView
        android:id="@+id/tvProfile"
        android:scrollbars="vertical"
        android:layout_width="250dp"
        android:layout_height="65dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tvProfileName"
        android:background="@drawable/border_style"
        android:textSize="12dp" />

    <ImageView
        android:id="@+id/ivFriendlinessStars"
        android:layout_width="60dp"
        android:layout_height="12dp"
        android:layout_alignRight="@+id/tvProfile"
        android:layout_alignBottom="@+id/tvProfile"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="20dp"/>

    <ImageView
        android:id="@+id/ivPlayfulnessStars"
        android:layout_width="60dp"
        android:layout_height="12dp"
        android:layout_alignRight="@+id/tvProfile"
        android:layout_alignBottom="@+id/tvProfile"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="5dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/etSearchString"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Search ..." />

    <Button
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/bClearSearch"
        android:background="@drawable/close"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"/>

</RelativeLayout>