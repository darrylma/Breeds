<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <SurfaceView
        android:id="@+id/TransparentView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <FrameLayout
        android:id="@+id/camera_preview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

    </FrameLayout>

    <Button
        android:id="@+id/bUpload"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/upload_icon"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"/>

    <Button
        android:id="@+id/bSearch"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/search_icon"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true" />

    <Button
        android:id="@+id/bMute"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/sound_icon_on"/>

    <ImageView
        android:id="@+id/ivPreview"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/border_style"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"/>

    <TextView
        android:id="@+id/tvDogBreedName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textSize="30dp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/tvObjectDetails"
        android:scrollbars="vertical"
        android:layout_width="200dp"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:textSize="12dp"
        android:gravity="right"
        android:background="@drawable/border_style"/>

    <TextView
        android:id="@+id/tvInstructions"
        android:scrollbars="vertical"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textSize="10dp"
        android:gravity="left"
        android:background="@drawable/border_style"/>

    <ImageView
        android:id="@+id/ivPreviewProfileCircle"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/tvDogBreedName"/>

    <TextView
        android:id="@+id/tvProfileBackground"
        android:scrollbars="vertical"
        android:layout_width="270dp"
        android:layout_height="320dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-10dp"
        android:layout_alignTop="@+id/bClose"
        android:background="@drawable/border_style2"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/tvProfileName"
        android:scrollbars="vertical"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/ivPreviewProfile"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textAllCaps="true"/>

    <TextView
        android:id="@+id/tvProfile"
        android:scrollbars="vertical"
        android:layout_width="250dp"
        android:layout_height="65dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tvProfileName"
        android:background="@drawable/border_style"
        android:textSize="12dp" />

    <ImageView
        android:id="@+id/ivFriendlinessStars"
        android:layout_width="60dp"
        android:layout_height="12dp"
        android:layout_alignRight="@+id/tvProfile"
        android:layout_alignBottom="@+id/tvProfile"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="20dp"/>

    <ImageView
        android:id="@+id/ivPlayfulnessStars"
        android:layout_width="60dp"
        android:layout_height="12dp"
        android:layout_alignRight="@+id/tvProfile"
        android:layout_alignBottom="@+id/tvProfile"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="5dp"/>

    <Button
        android:id="@+id/bPlaySound"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/tvObjectDetails"
        android:background="@drawable/play_icon"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="5dp"/>


    <Button
        android:id="@+id/bBrowse"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/browse_icon"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="60dp"
        android:layout_marginRight="5dp"/>

    <Button
        android:id="@+id/bClose"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="125dp"
        android:layout_alignRight="@+id/tvProfile"
        android:background="@drawable/close" />

    <ImageView
        android:id="@+id/ivPreviewProfile"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_alignTop="@+id/bClose"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true" />

</RelativeLayout>